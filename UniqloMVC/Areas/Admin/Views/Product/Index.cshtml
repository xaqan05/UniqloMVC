@model List<Product>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<div class="container mt-4">
    <div class="row">
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Product List</h6>
                    <a asp-action="Create" asp-controller="Product" class="btn btn-outline-primary">Create</a>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Emp Id</th>
                                <th scope="col">Salary</th>
                                <th scope="col">Bonus</th>
                                <th scope="col">Deduction</th>
                                <th scope="col">Month</th>
                                <th scope="col">Year</th>
                                <th scope="col">Status</th>
                                <th scope="col">Discount</th>
                                <th scope="col">Category</th>
                                <th colspan="3" scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td><img src="~/imgs/products/@item.CoverImage" width="50" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.CreatedTime</td>
                                    <td>@item.CostPrice</td>
                                    <td>@item.SellPrice</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Discount</td>
                                    <td>@item.CategoryId</td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Update" asp-controller="Product" asp-route-id="@item.Id">Update</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                    @if (!item.IsDeleted)
                                    {
                                        <td>
                                            <a class="btn btn-secondary" asp-action="Hide" asp-controller="Product" asp-route-id="@item.Id">Hide</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <a class="btn btn-warning" asp-action="Show" asp-controller="Product" asp-route-id="@item.Id">Show</a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
