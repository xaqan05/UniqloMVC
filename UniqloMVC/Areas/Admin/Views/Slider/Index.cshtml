@model List<Slider>
<div class="container mt-4">
    <div class="row">
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Slider List</h6>
                    <a asp-action="Create" asp-controller="Slider" class="btn btn-outline-primary">Create</a>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Title</th>
                                <th scope="col">Image</th>
                                <th scope="col">Subtitle</th>
                                <th scope="col">Link</th>
                                <th scope="col">Created Time</th>
                                <th colspan="3" scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td><img src="~/imgs/sliders/@item.ImageUrl" width="50" /></td>
                                    <td>@item.Title</td>
                                    <td>@item.Subtitle</td>
                                    <td>@item.Link</td>
                                    <td>@item.CreatedTime</td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Update" asp-controller="Slider" asp-route-id="@item.Id">Update</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Slider" asp-route-id="@item.Id">Delete</a>
                                        
                                    </td>
                                    @if (!item.IsDeleted)
                                    {
                                        <td>
                                            <a class="btn btn-secondary" asp-action="Hide" asp-controller="Slider" asp-route-id="@item.Id">Hide</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <a class="btn btn-warning" asp-action="Show" asp-controller="Slider" asp-route-id="@item.Id">Show</a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
